<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/top_score_padding"
    android:background="@color/menu_bg_color"
    >

    <include layout="@layout/menu_divider"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textSize="@dimen/menu_header_text_size"
        android:gravity="center"
        />

    <include layout="@layout/menu_divider"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawSelectorOnTop="false"
            android:clickable="false"
            android:isScrollContainer="false"
            />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/no_top_score"
            android:textSize="@dimen/menu_item_text_size"
            android:gravity="center"
            />

    </FrameLayout>

</LinearLayout>